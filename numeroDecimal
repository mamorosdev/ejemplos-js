<title>TEST NÚMERO ENTERO O DECIMAL</title>
<meta charset="UTF-8"> 
<script language="javascript">

function testNumero() {
		var numero = document.getElementById("numero").value;
		var resultado = "";
		if(numero.length==0 || isNaN(numero)) {
			resultado="Introduce un numero por favor.";
		} else {
			if (numero % 1 == 0) {
				resultado="Es un número entero";
			}
			else{
				resultado="Es un numero decimal";
				/* var numeroDecimal = new Number(numero);
				numeroDecimal.toFixed(3);
				document.getElementById("resultadoDosDecimales").innerHTML = numeroDecimal; */
			}
		}
		document.getElementById("resultado").innerHTML=resultado;
	}
</script>
</head>
<body>
<H1>TEST NÚMERO ENTERO O DECIMAL.</H1>
<P><INPUT id="numero" TYPE="TEXT" VALUE="" />
<P><INPUT TYPE="BUTTON" id="botonTest" value="Test" onclick="testNumero()" /></P>
<p><div id="resultado"/></p>
<p>Formato 2 decimales:<div id="resultadoDosDecimales"/></p>
